<!DOCTYPE html>
<html>
<head>
    {{>Head}}
</head>
<body>
    <div id="wrap">
        <div class="container">
            {{>Header}}
            <div class="row">
                {{>Crumbs}}
                {{>Edit}}
            </div>
            <div class="row row-offcanvas row-offcanvas-right">
                <div class="col-xs-12 col-sm-9 contentArea">
                    {{>MenuButton}}
                    <h1 class="mainTitle">{{Title}}</h1>
                    {{>Tags}}
                    {{{Content}}}
                    {{>Related}}
                    <div style="clear:both">
                        {{>CommitDate}}
                    </div>
                </div>
                <div id="sidebar" class="col-xs-6 col-sm-3 sidebar-offcanvas">
                    {{>Navigation}}
                </div>
            </div>
        </div>
    </div>
    {{>Footer}}
    {{>Foot}}
</body>
</html>